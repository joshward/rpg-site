root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript / JavaScript (including Node config files)
[*.{ts,tsx,js,jsx,mts,cts,mjs,cjs}]
indent_style = space
indent_size = 2

# TypeScript declaration files
[*.d.ts]
indent_style = space
indent_size = 2

# JSON (package.json, tsconfig.json, etc.)
[*.{json,jsonc,json5}]
indent_style = space
indent_size = 2
insert_final_newline = true
# Many formatters ignore trailing whitespace anyway
trim_trailing_whitespace = true

# CSS
[*.{css,scss}]
indent_style = space
indent_size = 2

# Markdown: keep trailing spaces for line breaks, don't enforce wrap
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML (if added later)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# XML (IDE settings, etc.)
[*.xml]
indent_style = space
indent_size = 2

# Env files
[.env*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Git config files
[*.git*]
end_of_line = lf
insert_final_newline = true
