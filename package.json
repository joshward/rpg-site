{
  "name": "rpg-site",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "op": "op run --env-file=.env.local --",
    "dev": "next dev",
    "dev!": "npm run op next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db!": "npm run op drizzle-kit --",
    "db:gen!": "npm run op drizzle-kit -- generate --name",
    "db:migrate!": "npm run db! migrate",
    "db:migrate": "drizzle-kit migrate",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@base-ui/react": "^1.1.0",
    "@better-fetch/fetch": "^1.1.21",
    "@neondatabase/serverless": "^1.0.2",
    "@radix-ui/colors": "^3.0.0",
    "@radix-ui/react-icons": "^1.3.2",
    "better-auth": "^1.4.18",
    "drizzle-orm": "^0.45.1",
    "next": "16.1.6",
    "next-themes": "^0.4.6",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "tailwind-merge": "^3.4.0",
    "timespan-ts": "^1.0.3",
    "valibot": "^1.2.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.12",
    "@types/react": "19.2.13",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "baseline-browser-mapping": "^2.9.19",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "jsdom": "^27.4.0",
    "prettier": "^3.8.1",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "better-auth": {
      "drizzle-orm": "$drizzle-orm"
    },
    "prisma": "^5.22.0",
    "@prisma/client": "^5.22.0"
  },
  "volta": {
    "node": "24.12.0"
  }
}
